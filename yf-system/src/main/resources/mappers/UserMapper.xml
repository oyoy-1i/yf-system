<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yfsystem.mappers.UsersMapper">

    <select id="queryUserByUsernameAndPwd" resultType="com.yfsystem.pojo.User">
        select * from tb_users where uname = #{uname} and upwd = #{pwd}
    </select>

</mapper>